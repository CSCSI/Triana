<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="ToTheScreen" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                value="%r [%t] %-5p %c %M - %m%n"/>
        </layout>
    </appender>

    <appender name="logFile" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="${user.home}/.TrianaV3Resources/log/triana.log"/>
        <param name="Append" value="false"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                value="%d{DATE} [%t] %-5p %c %M - %m%n"/>
        </layout>
    </appender>

    <root>
        <!--priority values [ TRACE, DEBUG, INFO, WARN, ERROR and FATAL ]-->
        <!-- <priority value="error"/> -->
        <priority value="debug"/>
        <appender-ref ref="logFile"/>
    </root>
</log4j:configuration>
